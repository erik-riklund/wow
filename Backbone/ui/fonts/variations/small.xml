<Ui>
  <!-- SMALL font variation with NO OUTLINE -->
  <FontString virtual="true"
              name="BackboneTextSmall"
              inherits="BackboneText">
    <FontHeight val="12" />
  </FontString>
  <!-- SMALL font variation with a THIN OUTLINE -->
  <FontString virtual="true"
              name="BackboneTextSmallThinOutline"
              inherits="BackboneTextSmall"
              outline="NORMAL" />
  <!-- SMALL font variation with a THICK OUTLINE -->
  <FontString virtual="true"
              name="BackboneTextSmallThickOutline"
              inherits="BackboneTextSmall"
              outline="THICK" />
</Ui>
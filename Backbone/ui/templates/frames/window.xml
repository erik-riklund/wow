<Ui>
  <Frame virtual="true"
         name="BackboneWindowTemplate"
         inherits="BackboneBorderedFrameTemplate"
         frameStrata="HIGH"
         clampedToScreen="true"
         enableMouse="true"
         movable="true">
    <Layers>
      <Layer level="BACKGROUND"
             textureSubLevel="-5">
        <Texture setAllPoints="true">
          <Color r="0.07"
                 g="0.09"
                 b="0.09"
                 a="0.9" />
        </Texture>
      </Layer>
      <Layer level="BACKGROUND"
             textureSubLevel="-4">
        <Texture name="$parentTitleBackground"
                 parentKey="titleBackground">
          <Size y="24" />
          <Color r="0.07"
                 g="0.09"
                 b="0.09"
                 a="1" />
          <Anchors>
            <Anchor point="TOPLEFT" />
            <Anchor point="TOPRIGHT" />
          </Anchors>
        </Texture>
      </Layer>
      <Layer level="BACKGROUND"
             textureSubLevel="-3">
        <Texture name="$parentTitleBackgroundShader"
                 parentKey="titleBackgroundShader"
                 inherits="BackboneBorderColor">
          <Size y="1" />
          <Anchors>
            <Anchor point="TOPLEFT"
                    relativeTo="$parentTitleBackground"
                    relativePoint="BOTTOMLEFT"
                    x="1" />
            <Anchor point="TOPRIGHT"
                    relativeTo="$parentTitleBackground"
                    relativePoint="BOTTOMRIGHT"
                    x="-1" />
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
    <Frames>
      <Button parentKey="closeButton"
              name="$parentCloseButton"
              inherits="BackboneButtonTemplate"
              text="backbone:WINDOW_CLOSE_BUTTON_LABEL">
        <Size y="25" />
        <Anchors>
          <Anchor point="TOPRIGHT" />
        </Anchors>
        <Scripts>
          <OnClick>            
            Backbone_HideParent(self)
          </OnClick>
        </Scripts>
      </Button>
    </Frames>
    <Scripts>
      <OnLoad>        
        self:RegisterForDrag('LeftButton')
      </OnLoad>
      <OnDragStart>        
        self:StartMoving()
      </OnDragStart>
      <OnDragStop>        
        self:StopMovingOrSizing()
      </OnDragStop>
    </Scripts>
  </Frame>
</Ui>
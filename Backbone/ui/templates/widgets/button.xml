<Ui>
  <!-- BEHAVIOR -->
  <Script file="button.lua" />
  <!-- TEMPLATE -->
  <Button virtual="true"
          name="BackboneButtonTemplate"
          inherits="BackboneBorderedFrameTemplate">
    <Layers>
      <Layer level="BACKGROUND"
             textureSubLevel="-1">
        <Texture setAllPoints="true">
          <Color r="0.57"
                 g="0.51"
                 b="0.45"
                 a="0.4" />
        </Texture>
      </Layer>
      <Layer level="OVERLAY"
             textureSubLevel="5">
        <Texture name="$parentActiveEffect"
                 inherits="BackboneActiveEffect"
                 parentKey="activeEffect" />
      </Layer>
    </Layers>
    <Scripts>
      <OnEnter>BackboneButtonTemplate_ToggleActiveEffect(self)</OnEnter>
      <OnLeave>BackboneButtonTemplate_ToggleActiveEffect(self)</OnLeave>
    </Scripts>
  </Button>
  <!-- TEMPLATE -->
  <Button virtual="true"
          name="BackboneButtonWithTooltipTemplate"
          inherits="BackboneButtonTemplate">    
    <Frames>
      ?
    </Frames>
  </Button>
</Ui>
<Ui>
  <Button virtual="true"
          name="BackboneTopMenuButtonTemplate">
    <NormalFont style="FontHammersmithOne" />
    <ButtonText parentKey="Text" />
    <Scripts>
      <OnLoad>        
        self.Text:SetTextColor(0.96, 0.87, 0.7)
      </OnLoad>
      <OnEnter>        
        self.Text:SetTextColor(0.93, 0.77, 0)
        self.Text:SetTextScale(1.15)
      </OnEnter>
      <OnLeave>        
        self.Text:SetTextColor(0.96, 0.87, 0.7)
        self.Text:SetTextScale(1)
      </OnLeave>
    </Scripts>
    <HitRectInsets>
      <AbsInset top="-10"
                right="-9"
                bottom="-10"
                left="-9" />
    </HitRectInsets>
  </Button>
  <Frame parent="UIParent"
         name="BackboneFrame"
         frameStrata="FULLSCREEN_DIALOG"
         enableMouse="true">
    <Anchors>
      <Anchor point="TOPLEFT"
              relativeTo="$parent"
              relativePoint="TOPLEFT" />
      <Anchor point="BOTTOMRIGHT"
              relativeTo="$parent"
              relativePoint="BOTTOMRIGHT" />
    </Anchors>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture setAllPoints="true">
          <Color r="0"
                 g="0"
                 b="0"
                 a="0.85" />
        </Texture>
      </Layer>
      <Layer level="ARTWORK">
        <Texture file="Interface\Addons\Backbone\media\icons\skeleton">
          <Size x="64"
                y="64" />
          <Anchors>
            <Anchor x="208"
                    y="-28"
                    point="TOPLEFT"
                    relativeTo="UIParent"
                    relativePoint="TOPLEFT" />
          </Anchors>
        </Texture>
      </Layer>
      <Layer level="OVERLAY">
        <FontString text="Backbone"
                    inherits="FontDosisThick">
          <Anchors>
            <Anchor x="100"
                    y="-48"
                    point="TOPLEFT"
                    relativeTo="UIParent"
                    relativePoint="TOPLEFT" />
          </Anchors>
        </FontString>
        <FontString text="Providing the 'fun' in functional addons!"
                    inherits="FontHammersmithOneSmall">
          <Anchors>
            <Anchor x="95"
                    y="-104"
                    point="TOPLEFT"
                    relativeTo="UIParent"
                    relativePoint="TOPLEFT" />
          </Anchors>
          <Color r="0.64"
                 g="0.64"
                 b="0.46" />
        </FontString>
        <FontString text="?"
                    name="BackboneVersionText"
                    inherits="FontNotoSansSmall">
          <Anchors>
            <Anchor x="-5"
                    y="5"
                    point="BOTTOMRIGHT"
                    relativeTo="UIParent"
                    relativePoint="BOTTOMRIGHT" />
          </Anchors>
          <Scripts>
            <OnLoad>self:SetText(backbone.version)</OnLoad>
          </Scripts>
        </FontString>
        <FontString text="Version: "
                    name="BackboneVersionTextLabel"
                    inherits="FontNotoSansSmall">
          <Anchors>
            <Anchor point="TOPRIGHT"
                    relativeTo="BackboneVersionText"
                    relativePoint="TOPLEFT" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Frames>
      <Frame name="$parentTopMenuPanel">
        <Size x="500"
              y="32" />
        <Anchors>
          <Anchor x="-100"
                  y="-48"
                  point="RIGHT"
                  relativeTo="UIParent"
                  relativePoint="TOPRIGHT" />
        </Anchors>
        <Frames>
          <Button name="$parentCloseButton"
                  inherits="BackboneTopMenuButtonTemplate"
                  text="Return to the game >">
            <Anchors>
              <Anchor point="TOPRIGHT"
                      relativeTo="$parent"
                      relativePoint="TOPRIGHT" />
            </Anchors>
            <Size x="160"
                  y="32" />
          </Button>
          <Button name="$parentConsoleButton"
                  inherits="BackboneTopMenuButtonTemplate"
                  text="Developer console">
            <Anchors>
              <Anchor x="-18"
                      point="TOPRIGHT"
                      relativeTo="$parentCloseButton"
                      relativePoint="TOPLEFT" />
            </Anchors>
            <Size x="140"
                  y="32" />
          </Button>
          <Button name="$parentSettingsButton"
                  inherits="BackboneTopMenuButtonTemplate"
                  text="Settings">
            <Anchors>
              <Anchor x="-18"
                      point="TOPRIGHT"
                      relativeTo="$parentConsoleButton"
                      relativePoint="TOPLEFT" />
            </Anchors>
            <Size x="80"
                  y="32" />
          </Button>
          <Button name="$parentStartpageButton"
                  inherits="BackboneTopMenuButtonTemplate"
                  text="Startpage">
            <Anchors>
              <Anchor x="-18"
                      point="TOPRIGHT"
                      relativeTo="$parentSettingsButton"
                      relativePoint="TOPLEFT" />
            </Anchors>
            <Size x="80"
                  y="32" />
          </Button>
        </Frames>
      </Frame>
      <Frame name="$parentLeftContentPanel">
        <Size x="300" />
        <Anchors>
          <Anchor x="100"
                  y="-200"
                  point="TOPLEFT"
                  relativeTo="$parent"
                  relativePoint="TOPLEFT" />
          <Anchor y="150"
                  point="BOTTOMLEFT"
                  relativeTo="$parent"
                  relativePoint="BOTTOMLEFT" />
        </Anchors>
        <!-- <Layers>
          <Layer level="BACKGROUND">
            <Texture setAllPoints="true">
              <Color r="1"
                     g="1"
                     b="1"
                     a="0.05" />
            </Texture>
          </Layer>
        </Layers> -->
      </Frame>
      <Frame name="$parentRightContentPanel">
        <Size x="300" />
        <Anchors>
          <Anchor x="-100"
                  y="-200"
                  point="TOPRIGHT"
                  relativeTo="$parent"
                  relativePoint="TOPRIGHT" />
          <Anchor y="150"
                  point="BOTTOMRIGHT"
                  relativeTo="$parent"
                  relativePoint="BOTTOMRIGHT" />
        </Anchors>
        <!-- <Layers>
          <Layer level="BACKGROUND">
            <Texture setAllPoints="true">
              <Color r="1"
                     g="1"
                     b="1"
                     a="0.05" />
            </Texture>
          </Layer>
        </Layers> -->
      </Frame>
      <Frame name="$parentMainContentPanel">
        <Anchors>
          <Anchor x="75"
                  point="TOPLEFT"
                  relativeTo="$parentLeftContentPanel"
                  relativePoint="TOPRIGHT" />
          <Anchor point="BOTTOMLEFT"
                  relativeTo="$parentLeftContentPanel"
                  relativePoint="BOTTOMRIGHT" />
          <Anchor x="-75"
                  point="TOPRIGHT"
                  relativeTo="$parentRightContentPanel"
                  relativePoint="TOPLEFT" />
          <Anchor point="BOTTOMRIGHT"
                  relativeTo="$parentRightContentPanel"
                  relativePoint="BOTTOMLEFT" />
        </Anchors>
        <!-- <Layers>
          <Layer level="BACKGROUND">
            <Texture setAllPoints="true">
              <Color r="1"
                     g="1"
                     b="1"
                     a="0.05" />
            </Texture>
          </Layer>
        </Layers> -->
      </Frame>
    </Frames>
  </Frame>
  <Script file="frame.lua" />
</Ui>
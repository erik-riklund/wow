<Ui>
  <!-- BUTTON -->
  <Button virtual="true"
          name="BackboneButtonTemplate">
    <ButtonText parentKey="textLabel"
                inherits="BackboneFontDosis" />
    <Scripts>
      <OnLoad>backbone.widgetConstructors.button(self)</OnLoad>
      <OnShow>backbone.widgetControllers.updateButtonWidth(self)</OnShow>
      <OnEnter>backbone.widgetControllers.setButtonLabelActiveColor(self)</OnEnter>
      <OnLeave>backbone.widgetControllers.setButtonLabelColor(self)</OnLeave>
    </Scripts>
  </Button>
  <!-- BEHAVIOR -->
  <Script file="buttons.lua" />
</Ui>
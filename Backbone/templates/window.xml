<Ui>
  <Frame virtual="true"
         name="BackboneWindowTemplate"
         inherits="BackboneBorderedFrameTemplate"
         enableMouse="true"
         clampedToScreen="true"
         movable="true">
    <Layers>
      <Layer level="BACKGROUND">
        <Texture parentKey="backgroundColor" />
      </Layer>
    </Layers>
    <Frames>
      <Button parentKey="closeButton"
              text="backbone:WINDOW_CLOSE_BUTTON"
              inherits="BackboneButtonTemplate">
        <Size y="28" />
        <Anchors>
          <Anchor point="TOPRIGHT" x="-5" y="-2" />
        </Anchors>
        <Scripts>
          <OnClick>(self:GetParent()):SetShown(false)</OnClick>
        </Scripts>
      </Button>
    </Frames>
    <Scripts>
      <OnDragStart>self:StartMoving()</OnDragStart>
      <OnDragStop>self:StopMovingOrSizing()</OnDragStop>
      <OnLoad>backbone.widgetConstructors.window(self)</OnLoad>
    </Scripts>
  </Frame>
  <Script file="window.lua" />
</Ui>
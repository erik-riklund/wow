<Ui>
  <Button parent="UIParent"
          name="BackboneShortcutFrame"
          inherits="BackboneBorderedFrameTemplate"
          frameStrata="TOOLTIP"
          frameLevel="6"
          text="Backbone"
          hidden="true">
    <Size x="250"
          y="48" />
    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>
    <HitRectInsets bottom="-24" />
    <ButtonText parentKey="textLabel"
                font="interface\addons\backbone\media\fonts\kablammo.ttf">
      <FontHeight val="36" />
      <Anchors>
        <Anchor point="CENTER"
                x="24" />
      </Anchors>
    </ButtonText>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture parentKey="backgroundColor" />
      </Layer>
      <Layer level="OVERLAY">
        <Texture file="interface\addons\backbone\media\icons\skeleton">
          <Size x="36"
                y="36" />
          <Anchors>
            <Anchor point="LEFT"
                    x="16" />
          </Anchors>
        </Texture>
      </Layer>
      <Layer level="BORDER">
        <Texture parentKey="arrowBase">
          <Size x="6"
                y="1" />
          <Anchors>
            <Anchor point="CENTER" />
            <Anchor point="TOP"
                    relativePoint="BOTTOM" />
          </Anchors>
        </Texture>
        <Texture parentKey="arrowCenter">
          <Size x="4"
                y="1" />
          <Anchors>
            <Anchor point="CENTER" />
            <Anchor point="TOP"
                    relativeKey="$parent.arrowBase"
                    relativePoint="BOTTOM" />
          </Anchors>
        </Texture>
        <Texture parentKey="arrowTip">
          <Size x="2"
                y="1" />
          <Anchors>
            <Anchor point="CENTER" />
            <Anchor point="TOP"
                    relativeKey="$parent.arrowCenter"
                    relativePoint="BOTTOM" />
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
    <!-- <Scripts>
      <OnLoad>backbone.widgetConstructors.shortcutFrame(self)</OnLoad>
    </Scripts> -->
  </Button>
  <!-- BEHAVIOR -->
  <Script file="shortcut.lua" />
</Ui>
<Ui>
  <Frame name="BackboneShortcutFrame"
         parent="UIParent"
         enableMouse="true"
         frameStrata="HIGH"
         hidden="true">
    <Size y="24" />
    <Anchors>
      <Anchor point="TOPLEFT" y="1" />
      <Anchor point="TOPRIGHT" />
    </Anchors>
    <Frames>
      <Button parentKey="shortcutButton"
              name="BackboneShortcutButton"
              inherits="BackboneButtonWithTooltipTemplate"
              text="backbone:APP_SHORTCUT_BUTTON_LABEL">
        <Size y="24" />
        <Anchors>
          <Anchor point="CENTER" />
        </Anchors>
        <Scripts>
          <OnClick>
            Backbone_HideParent(self)
            Backbone_ToggleState(BackboneFrame)
          </OnClick>
        </Scripts>
      </Button>
    </Frames>
  </Frame>
</Ui>
<Ui>
  <Frame name="BackboneHeader"
         parent="BackboneOverlay">
    <Size>
      <AbsDimension y="150" />
    </Size>
    <Anchors>
      <Anchor point="TOPLEFT"
              relativeTo="$parent"
              relativePoint="TOPLEFT" />
      <Anchor point="TOPRIGHT"
              relativeTo="$parent"
              relativePoint="TOPRIGHT" />
    </Anchors>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture setAllPoints="true">
          <Color r="0.12"
                 g="0.12"
                 b="0.12"
                 a="0.9" />
        </Texture>
      </Layer>
      <Layer level="BORDER">
        <Texture>
          <Size y="1" />
          <Color r="0.06"
                 g="0.07"
                 b="0.09"
                 a="1" />
          <Anchors>
            <Anchor point="TOPLEFT"
                    relativeTo="$parent"
                    relativePoint="BOTTOMLEFT" />
            <Anchor point="TOPRIGHT"
                    relativeTo="$parent"
                    relativePoint="BOTTOMRIGHT" />
          </Anchors>
        </Texture>
        <Texture>
          <Size y="1" />
          <Color r="0.05"
                 g="0.05"
                 b="0.05"
                 a="1" />
          <Anchors>
            <Anchor y="-1"
                    point="TOPLEFT"
                    relativeTo="$parent"
                    relativePoint="BOTTOMLEFT" />
            <Anchor point="TOPRIGHT"
                    relativeTo="$parent"
                    relativePoint="BOTTOMRIGHT" />
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
  </Frame>
</Ui>
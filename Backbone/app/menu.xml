<Ui>
  <!-- BEHAVIOR -->
  <Script file="menu.lua" />
  <!-- BUTTON template -->
  <Button virtual="true"
          name="BackboneMenuButton"
          text="backbone:BUTTON_TEMPLATE">
    <Size y="32" />
    <HitRectInsets left="-8"
                   right="-8"
                   bottom="-4" />
    <ButtonText parentKey="textLabel"
                inherits="BackboneFontTitilliumWeb" />
    <Scripts>
      <OnEnter>        
        BackboneButtonTemplate_SetActiveColor(self)
      </OnEnter>
      <OnLeave>        
        BackboneButtonTemplate_SetStaticColor(self)
      </OnLeave>
      <OnLoad>        
        BackboneButtonTemplate_SetStaticColor(self)
        BackboneButtonTemplate_OnLoad(self)
        BackboneButtonTemplate_UpdateWidth(self)
      </OnLoad>
    </Scripts>
  </Button>
  <!-- MENU FRAME -->
  <Frame name="BackboneMenuFrame"
         parent="BackboneHeaderFrame"
         enableMouse="true">
    <Size y="32" />
    <Anchors>
      <Anchor point="BOTTOMLEFT" />
      <Anchor point="BOTTOMRIGHT" />
    </Anchors>
    <Frames>
      <Frame name="BackboneMenuFrameSpacer">
        <Size x="8"
              y="32" />
        <Anchors>
          <Anchor point="BOTTOMRIGHT" />
        </Anchors>
      </Frame>
    </Frames>
  </Frame>
</Ui>
<Ui>
  <Frame name="BackboneFrame"
         parent="UIParent"
         inherits="BackboneWindowTemplate">
    <Size x="960"
          y="640" />
    <Anchors>
      <Anchor point="CENTER" />
      <Anchor point="TOP"
              y="-100" />
    </Anchors>
    <Frames>
      <Button parentKey="minimizeButton"
              inherits="BackboneButtonWithTooltipTemplate"
              text="backbone:APP_MINIMIZE_BUTTON_LABEL">
        <Size y="25" />
        <Anchors>
          <Anchor point="TOPRIGHT"
                  relativeTo="$parentCloseButton"
                  relativePoint="TOPLEFT"
                  x="-1" />
        </Anchors>
        <Scripts>
          <OnClick>
            Backbone_HideParent(self)
            Backbone_ToggleState(BackboneShortcutFrame)
          </OnClick>
        </Scripts>
      </Button>
    </Frames>
  </Frame>
</Ui>
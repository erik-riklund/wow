<Ui>
  <Frame name="BackboneFrame"
         parent="UIParent"
         inherits="BackboneWindowTemplate">
    <Anchors>
      <Anchor point="TOPLEFT"
              relativeTo="$parent"
              x="250"
              y="-50" />
      <Anchor point="BOTTOMLEFT"
              relativeTo="$parent"
              x="200"
              y="150" />
      <Anchor point="TOPRIGHT"
              relativeTo="$parent"
              x="-250"
              y="-500" />
      <Anchor point="BOTTOMRIGHT"
              relativeTo="$parent"
              x="-200"
              y="150" />
    </Anchors>
    <Frames>
      <Button parentKey="minimizeButton"
              inherits="BackboneButtonWithTooltipTemplate"
              text="Collapse[Show the shortcut panel at the top of the screen]">
        <Size y="25" />
        <Anchors>
          <Anchor point="TOPRIGHT"
                  relativeTo="$parentCloseButton"
                  relativePoint="TOPLEFT"
                  x="-1" />
        </Anchors>
      </Button>
    </Frames>
  </Frame>
</Ui>
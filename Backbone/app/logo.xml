<Ui>
  <Frame name="BackboneLogo"
         parent="BackboneHeader">
    <Size x="300" />
    <Anchors>
      <Anchor point="TOPLEFT"
              relativeTo="$parent"
              x="85" />
      <Anchor point="BOTTOMLEFT"
              relativeTo="$parent" />
    </Anchors>
    <Layers>
      <Layer level="OVERLAY">
        <FontString text="Backbone"
                    name="$parentText"
                    inherits="BackboneFontDosisHuge">
          <Anchors>
            <Anchor point="CENTER" />
            <Anchor point="LEFT"
                    relativeTo="$parent" />
          </Anchors>
          <Color r="0.64"
                 g="0.58"
                 b="0.47" />
        </FontString>
        <FontString inherits="BackboneFontKanitSmall">
          <Color r="0.64"
                 g="0.58"
                 b="0.47" />
          <Anchors>
            <Anchor x="-4"
                    y="-12"
                    point="BOTTOMRIGHT"
                    relativeTo="$parentText"
                    relativePoint="TOPRIGHT" />
          </Anchors>
          <Scripts>
            <OnLoad>self:SetText('v'.. _G.backbone.version)</OnLoad>
          </Scripts>
        </FontString>
        <FontString text="Providing the 'fun' in functional addons since 2024."
                    inherits="BackboneFontKanitSmall">
          <Color r="0.66"
                 g="0.71"
                 b="0.4"
                 a="1" />
          <Anchors>
            <Anchor x="-5"
                    point="TOPLEFT"
                    relativeTo="$parentText"
                    relativePoint="BOTTOMLEFT" />
          </Anchors>
        </FontString>
      </Layer>
      <Layer level="ARTWORK">
        <Texture file="interface\addons\backbone\media\icons\skeleton">
          <Size x="48"
                y="48" />
          <Anchors>
            <Anchor point="TOPLEFT"
                    relativeTo="$parentText"
                    relativePoint="TOPRIGHT"
                    x="18"
                    y="4" />
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
  </Frame>
</Ui>
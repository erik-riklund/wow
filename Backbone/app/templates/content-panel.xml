<Ui>
  <Frame virtual="true"
         parent="BackboneApp"
         name="BackboneAppContentPanelTemplate"
         hidden="true">
    <Anchors>
      <Anchor point="TOPLEFT"
              relativeTo="$parentContentPanel" />
      <Anchor point="BOTTOMRIGHT"
              relativeTo="$parentContentPanel" />
    </Anchors>
    <Layers>
      <Layer level="OVERLAY">
        <FontString parentKey="headline"
                    font="interface\addons\backbone\media\fonts\dosis.ttf"
                    text="Hello world">
          <Anchors>
            <Anchor point="TOPLEFT"
                    x="24"
                    y="-16" />
          </Anchors>
          <FontHeight val="28" />
        </FontString>
      </Layer>
    </Layers>
    <Scripts>
      <OnLoad>        
        backbone.registerThemeableLabels {
          { object = self.headline, colorKey = 'appContentPanelHeadlineColor' }
        }
      </OnLoad>
    </Scripts>
  </Frame>
  <!-- SCROLLABLE PANEL -->
  <ScrollFrame virtual="true"
               name="BackboneAppScrollableContentPanelTemplate"
               inherits="BackboneAppContentPanelTemplate">
    <!-- ? -->
  </ScrollFrame>
</Ui>
<Ui>
  <Script file="behavior.lua" />
  <!-- BackboneWindowTemplate -->
  <Frame parent="UIParent"
         name="BackboneWindowTemplate"
         inherits="BackboneFrameTemplate"
         enableMouse="true"
         clampedToScreen="true"
         movable="true">
    <Size x="600" y="400" />
    <Scripts>
      <OnLoad function="BackboneWindowTemplate_OnLoad" />
    </Scripts>
    <Frames>
      <Button parentKey="closeButton"
              inherits="BackboneButtonTemplate"
              text="backbone:closeButton">
        <Anchors>
          <Anchor point="TOPRIGHT" />
        </Anchors>
        <Size y="26" />
      </Button>
    </Frames>
  </Frame>
</Ui>